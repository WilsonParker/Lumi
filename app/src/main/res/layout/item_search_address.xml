<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

        <data>
              <variable
                  name="item"
                  type="com.graction.developer.lumi.Model.Address.PostcodifyModel.ItemModel" />

              <variable
                  name="viewHolder"
                  type="com.graction.developer.lumi.Adapter.AddressListAdapter.ViewHolder" />
        </data>

    <LinearLayout
        android:id="@+id/item_search_address_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_search_address_root_height"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="@color/item_search_address_line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="45.7">

            <View
                style="@style/Style_MarginView"
                android:layout_weight="16.7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="153"
                android:textColor="@color/item_search_address_text"
                android:textSize="@dimen/item_search_address_text_font_size"
                android:gravity="center_vertical"
                android:text="@{item.ko_common+' '+item.ko_jibeon}"
                android:onClick='@{(view) -> viewHolder.onClick(item)}'
                tool:text="서울 관악구 신림동 관악산" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:background="@color/item_search_address_line" />
        </LinearLayout>

    </LinearLayout>
</layout>
