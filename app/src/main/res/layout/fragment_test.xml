<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.graction.developer.lumi.Fragment.TestFragment" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dust">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="100dp"
                android:onClick="@{(view ) -> activity.test1()}"
                android:text="test1" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="@{(view ) -> activity.test2()}"
                android:text="test2" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="@{(view ) -> activity.test3(false)}"
                android:text="test3 vibrate" />

            <Button
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="@{(view ) -> activity.test3(true)}"
                android:text="test3 speaker" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Hour" />

                <EditText
                    android:id="@+id/fragment_test_ET_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Minute" />

                <EditText
                    android:id="@+id/fragment_test_ET_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Second" />

                <EditText
                    android:id="@+id/fragment_test_ET_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{activity::alarmTest}"
                android:text="Alarm" />
        </LinearLayout>
    </FrameLayout>
</layout>
